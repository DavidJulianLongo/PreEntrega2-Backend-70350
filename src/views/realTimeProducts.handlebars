<main class="container">
    <div class="form-container">
        <h2>Ingresar producto</h2>
        <form id="productForm">
            <label for="name">Nombre</label>
            <input type="text" id="name" name="productName" required placeholder="Nombre del producto">

            <label for="price">Precio ($)</label>
            <input type="number" id="price" name="price" required placeholder="Precio del producto" min="0.01"
                step="0.01">

            <label for="stock">Stock</label>
            <input type="number" id="stock" name="stock" required placeholder="stock del producto" min="0">

            <label for="category">Categoría</label>
            <input type="text" id="category" name="category" required placeholder="Categoría del producto">

            <label for="description">Descripción</label>
            <textarea id="description" name="description" required placeholder="Descripción del producto"></textarea>

            <button type="submit" class="add-product-btn">Agregar</button>
        </form>
    </div>

    <div class="table-prod">
        <table id="productTable">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Stock</th>
                    <th>Categoría</th>
                    <th>Descripción</th>
                    <th colspan="2"></th>
                </tr>
            </thead>
            <tbody id="productTableBody">
                <!-- Acá se mostrarán los productos -->
            </tbody>
        </table>
    </div>
</main>


<script src="/socket.io/socket.io.js"></script>
<script src="realTimeProducts.js"></script>